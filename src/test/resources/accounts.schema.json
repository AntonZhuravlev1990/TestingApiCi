{
  "$schema": "http://json-schema.org/draft-07/schema",
  "default": [],
  "items": {
    "additionalProperties": false,
    "properties": {
      "balance": {
        "default": 0,
        "type": "integer"
      },
      "currency": {
        "enum": [
          "RUB",
          "USD"
        ],
        "type": "string"
      },
      "id": {
        "description": "идентификатор аккаунта",
        "type": "integer"
      },
      "name": {
        "minLength": 1,
        "type": "string"
      },
      "number": {
        "pattern": "^•• \\d{4}$",
        "type": "string"
      }
    },
    "required": [
      "id",
      "name",
      "number",
      "balance",
      "currency"
    ],
    "type": "object"
  },
  "type": "array"
}